<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsFragment">

    <ImageView
        android:id="@+id/dcsLogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="15dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/dsc_logo_color"/>

    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_txt"
        android:textAlignment="center"
        android:layout_below="@+id/dcsLogo"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:padding="20dp"
        />

    <Button
        android:id="@+id/btnLink"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/visit_dscsastra_com"
        android:background="@drawable/btn_border"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/txtAbout"/>
</RelativeLayout>